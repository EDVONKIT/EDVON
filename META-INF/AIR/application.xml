<?xml version="1.0" encoding="utf-8" standalone="no"?>
<application xmlns="http://ns.adobe.com/air/application/21.0">
	<id>cc.MBlock.3.3.1</id>

	<!-- Used as the filename for the application. Required. -->
	<filename>EDVON</filename>

	<!-- The name that is displayed in the AIR application installer. May have 
		multiple values for each language. See samples or xsd schema file. Optional. -->
	<name>
		<text xml:lang="zh-CN">EDVON</text>
		<text xml:lang="EN">EDVON</text>
	</name>

	<versionNumber>5.0.2</versionNumber>
	<supportedProfiles>extendedDesktop</supportedProfiles>

	<!-- Description, displayed in the AIR application installer. May have multiple 
		values for each language. See samples or xsd schema file. Optional. -->
	<description>
		<text xml:lang="zh-CN"><![CDATA[MBlock是基于MIT媒体实验室的开源Scratch代码开发的程序, 为Arduino生态系统里的电子模块开启全新交互特性 .]]></text>
		<text xml:lang="EN"><![CDATA[MBlock is a modified version of Scratch 2.0 developped by the MIT Media Lab, with new features interacting with electronic modules in Arduino Eco-system. Scratch is a project of the Lifelong Kindergarten group at the MIT Media Lab. It is available for free at http://scratch.mit.edu]]></text>
	</description>

	<copyright>Makeblock</copyright>

	<initialWindow>
		<!-- The main SWF or HTML file of the application. Required. -->
		<!-- Note: In Flash Builder, the SWF reference is set automatically. -->
		<content>EDVON.swf</content>
		<width>1280</width>
		<height>768</height>

		<!-- The window's initial x position. Optional. -->
		<x>0</x>

		<!-- The window's initial y position. Optional. -->
		<y>0</y>

		<!-- The window's minimum size, specified as a width/height pair in pixels, 
			such as "400 200". Optional. -->
		<minSize>500 500</minSize>
		<visible>true</visible>
	</initialWindow>

	<icon>
		<image16x16>icons/AppIcon16.png</image16x16>
		<image32x32>icons/AppIcon32.png</image32x32>
		<image48x48>icons/AppIcon48.png</image48x48>
		<image128x128>icons/AppIcon128.png</image128x128>
	</icon>

	<fileTypes>

		<!-- Defines one file type. Optional. -->
		<fileType>

			<!-- The name that the system displays for the registered file type. Required. -->
			<name>MBlock.ProjectFile</name>

			<!-- The extension to register. Required. -->
			<extension>sb2</extension>

			<!-- The description of the file type. Optional. -->
			<description>MBlock Project File</description>

			<!-- The MIME content type. -->
			<contentType>application/MBlock.project-file</contentType>

			<!-- The icon to display for the file type. Optional. -->
			<icon>
				<image16x16>icons/ProjectIcon16.png</image16x16>
				<image32x32>icons/ProjectIcon32.png</image32x32>
				<image48x48>icons/ProjectIcon48.png</image48x48>
				<image128x128>icons/ProjectIcon128.png</image128x128>
			</icon>

		</fileType>
	</fileTypes>
	<extensions>
		<extensionID>cc.makeblock.BluetoothExt</extensionID>
		<extensionID>cc.makeblock.AIRSerial</extensionID>
		<extensionID>cc.makeblock.AirHID</extensionID>
	</extensions>
</application>
